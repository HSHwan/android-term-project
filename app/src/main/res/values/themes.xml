<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Eattoplan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Eattoplan" parent="Base.Theme.Eattoplan" />

    <style name="Theme.EatToPlan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary / Accent -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/on_accent</item>
        <!-- Toolbar text -->
        <item name="toolbarStyle">@style/Widget.EatToPlan.Toolbar</item>
    </style>

    <style name="Widget.EatToPlan.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.EatToPlan.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.EatToPlan.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>